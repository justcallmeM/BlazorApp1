@using BlazorApp1.Data;
@page "/"

    <div id="container">
        @for(int i = 0; i < styleCollection.Length; i++)
        {
            <Component style="@styleCollection[i]" model="data.AnimalList[i]"></Component>
        }
    </div>

    <div class="calculator">

        <div class="outline"></div>
        <div class="lcd"></div>

        <div class="zero">0</div>
        <div class="one">1</div>
        <div class="two">2</div>
        <div class="three">3</div>
        <div class="four">4</div>
        <div class="five">5</div>
        <div class="six">6</div>
        <div class="seven">7</div>
        <div class="eight">8</div>
        <div class="nine">9</div>

        <div class="equals"></div>

        <div class="divide"></div>
        <div class="multiply"></div>

        <div class="plus"></div>
        <div class="minus"></div>
    </div>


@code {

    Models data = new Models();

    protected override async Task OnInitializedAsync()
    {
        Cat cat = new Cat();
        Dog dog = new Dog();
        Bird bird = new Bird();

        cat.Name = "Cat";
        cat.Speed = "15";

        dog.Name = "Dog";
        dog.Speed = "25";

        bird.Name = "Bird";
        bird.Speed = "30";

        data.AnimalList.Add(cat);
        data.AnimalList.Add(dog);
        data.AnimalList.Add(bird);
    }

    string[] styleCollection = new string[] { "component_Blue",
                                              "component_Green",
                                              "component_Orange",
                                              "component_Yellow" };

}