@using BlazorApp1.Data;
@page "/"

    <div id="container">
        @for(int i = 0; i < styleCollection.Length; i++)
        {
            <Component style="@styleCollection[i]" model="animals.Animals[i]"></Component>
        }
    </div>

    <div class="calculator">

        <div class="outline"></div>
        <div class="lcd"></div>

        <div class="zero">0</div>
        <div class="one">1</div>
        <div class="two">2</div>
        <div class="three">3</div>
        <div class="four">4</div>
        <div class="five">5</div>
        <div class="six">6</div>
        <div class="seven">7</div>
        <div class="eight">8</div>
        <div class="nine">9</div>

        <div class="equals"></div>

        <div class="divide"></div>
        <div class="multiply"></div>

        <div class="plus"></div>
        <div class="minus"></div>
    </div>


@code {

    ModelAnimals animals { get; set; }


    protected override async Task OnInitializedAsync()
    {
        animals = new ModelAnimals();
        animals.Animals.Add(new Cat() { Name = "Cat", Speed = "25" });
        animals.Animals.Add(new Dog() { Name = "Dog", Speed = "30" });
        animals.Animals.Add(new Bird() { Name = "Bird", Speed = "35" });
        animals.Animals.Add(new Horse() { Name = "Horse", Speed = "50" });
    }

    string[] styleCollection = new string[] { "component_Blue",
                                              "component_Green",
                                              "component_Orange",
                                              "component_Yellow" };

}